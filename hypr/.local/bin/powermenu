#!/bin/bash

options="󰌾  Lock\n󰗼  Logout\n󰤄  Sleep\n󰜉  Reboot\n󰐥  Shutdown"

selected=$(echo -e "$options" | rofi -dmenu -p "󰐥 Power" -i -theme ~/.config/rofi/powermenu.rasi)

case "$selected" in
    *"Lock"*)
        hyprlock
        ;;
    *"Logout"*)
        hyprctl dispatch exit
        ;;
    *"Sleep"*)
        systemctl suspend
        ;;
    *"Reboot"*)
        systemctl reboot
        ;;
    *"Shutdown"*)
        systemctl poweroff
        ;;
esac
