#!/bin/bash
# Cycle through scratchpad windows by bringing the next one to front

direction="${1:-next}"  # next or prev

# Get all windows in scratchpad, sorted by PID for consistency with display order
windows=$(hyprctl clients -j | jq -r '[.[] | select(.workspace.name == "special:magic")] | sort_by(.pid) | .[].address')

if [ -z "$windows" ]; then
    exit 0
fi

# Get current focused window
current=$(hyprctl activewindow -j 2>/dev/null | jq -r '.address // empty')

# Convert to array
readarray -t win_array <<< "$windows"

# Find current window index
current_idx=-1
for i in "${!win_array[@]}"; do
    if [[ "${win_array[$i]}" == "$current" ]]; then
        current_idx=$i
        break
    fi
done

# Calculate next window index based on direction
if [ "$direction" == "prev" ]; then
    # Previous window
    if [ $current_idx -le 0 ]; then
        next_idx=$((${#win_array[@]} - 1))
    else
        next_idx=$((current_idx - 1))
    fi
else
    # Next window
    if [ $current_idx -eq -1 ] || [ $current_idx -eq $((${#win_array[@]} - 1)) ]; then
        next_idx=0
    else
        next_idx=$((current_idx + 1))
    fi
fi

next_window="${win_array[$next_idx]}"

# Focus and raise the next window
hyprctl dispatch focuswindow "address:$next_window"
hyprctl dispatch alterzorder "top,address:$next_window"
