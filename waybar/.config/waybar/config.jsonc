{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "margin-top": 4,
  "margin-left": 6,
  "margin-right": 6,
  "spacing": 0,
  "height": 38,

  "modules-left": ["hyprland/workspaces", "custom/scratchpad", "custom/windows"],
  "modules-center": ["clock", "hyprland/language", "keyboard-state", "pulseaudio#mic", "power-profiles-daemon"],
  "modules-right": [
    "tray",
    "bluetooth",
    "network",
    "pulseaudio",
    "battery"
  ],

  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{name}",
    "format-icons": {
      "default": "",
      "active": ""
    }
  },

  "clock": {
    "format": "  {:%a %d %b  %H:%M}",
    "format-alt": "  {:%A, %B %d %Y}",
    "tooltip-format": "<tt>{calendar}</tt>"
  },

  "bluetooth": {
    "format": "󰂯",
    "format-disabled": "󰂲",
    "format-connected": "󰂱 {num_connections}",
    "format-off": "󰂲",
    "tooltip-format": "{controller_alias}: {status}",
    "tooltip-format-connected": "{controller_alias}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "  {device_alias}",
    "on-click": "kitty --class bluetui-popup -e bluetui",
    "on-click-right": "blueman-manager"
  },

  "network": {
    "format-wifi": "󰤨 {signalStrength}%",
    "format-ethernet": "󰀂",
    "format-disconnected": "󰤭",
    "tooltip-format-wifi": "{essid}\n{ipaddr}/{cidr}\n⇣{bandwidthDownBytes} ⇡{bandwidthUpBytes}",
    "tooltip-format-ethernet": "{ifname}\n{ipaddr}/{cidr}",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "kitty --class impala-popup -e impala",
    "on-click-right": "nm-connection-editor"
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰖁 muted",
    "format-icons": {
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "tooltip-format": "{desc}",
    "on-click": "kitty --class wiremix-popup -e wiremix -v output",
    "on-click-right": "pavucontrol",
    "on-click-middle": "pamixer -t",
    "on-scroll-up": "pamixer -i 5",
    "on-scroll-down": "pamixer -d 5"
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": "󰂄 {capacity}%",
    "format-plugged": "󰚥 {capacity}%",
    "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "tooltip-format": "{timeTo}\nPower: {power}W",
    "states": {
      "warning": 20,
      "critical": 10
    }
  },

  "hyprland/language": {
    "format": "{short}"
  },

  "keyboard-state": {
    "capslock": true,
    "format": "{icon}",
    "format-icons": {
      "locked": "󰪛",
      "unlocked": ""
    }
  },

  "tray": {
    "icon-size": 16,
    "spacing": 10
  },

  "pulseaudio#mic": {
    "format": "{format_source}",
    "format-source": "",
    "format-source-muted": "󰍭",
    "tooltip-format": "Mic: {source_desc}",
    "on-click": "pamixer --default-source -t"
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "format-icons": {
      "performance": "󰓅",
      "balanced": "",
      "power-saver": "󰌪"
    },
    "tooltip-format": "Power profile: {profile}"
  },

  "custom/scratchpad": {
    "exec": "~/.local/bin/hypr-scratchpad-watch",
    "return-type": "json",
    "on-click": "~/.local/bin/hypr-scratchpad-toggle",
    "tooltip-format": "Scratchpad windows\nClick to toggle"
  },

  "custom/windows": {
    "exec": "~/.local/bin/hypr-windows-watch",
    "return-type": "json",
    "format": "{}",
    "escape": false
  }
}
